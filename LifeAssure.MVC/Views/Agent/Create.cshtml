@model LifeAssure.Models.AgentCreate

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">Create An Agent</h2>
<div class="d-flex justify-content-center text-center">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Agent's Name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LengthOfEmployment, new { htmlAttributes = new { @class = "form-control", placeholder = "Agent's Years Of Service" } })
                    @Html.ValidationMessageFor(model => model.LengthOfEmployment, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberOfPolicies, new { htmlAttributes = new { @class = "form-control", placeholder = "Number of Policies Agent Has" } })
                    @Html.ValidationMessageFor(model => model.NumberOfPolicies, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-success btn-lg" })
</div>