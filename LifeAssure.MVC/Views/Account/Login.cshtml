@using LifeAssure.MVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2 class="text-center" id="pad">@ViewBag.Title.</h2>
<div class="d-flex justify-content-center text-center">

    <div class="row ">
        <div>
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="text-center" id="pad">Use a local account to log in.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group text-primary" id="pad2">
                        @Html.LabelFor(m => m.Email, new { @class = " control-label" })
                        <div id="pad2">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-primary" id="pad2">
                        @Html.LabelFor(m => m.Password, new { @class = " control-label" })
                        <div id="pad2">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group" id="pad2">
                        <div id="pad2">
                            <div class="checkbox text-primary">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group" id="pad2">
                        <div id="pad2">
                            <input type="submit" value="Log in" class="btn btn-primary" id="pad" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Register as a new user", "Register", null, htmlAttributes: new { @class = "btn btn-success btn-lg" })
                    </p>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }
            </section>
        </div>

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>